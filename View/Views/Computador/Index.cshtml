
@{
    ViewData["Title"] = "Index";
}

<h4 class="text-primary  text-center">Lista de Computadores</h4>

<div class="row">
    <div class="col-12">
        <a class="btn btn-primary float-right mb-3"
           href="@Url.Action("Cadastro")">Novo Computador</a>
    </div>
</div>

<div class="row">
    <div class="col-12">
        <table class="table table-striped table-hover table-bordered mt-3"
               id="computador-index">
            <thead>
                <tr>
                    <th>Código</th>
                    <th>Categoria</th>
                    <th>Nome</th>
                    <th>Valor</th>
                    <th>Ação</th>
                </tr>
            </thead>
        </table>
    </div>
</div>

@section Scripts{
    <script src="~/js/computador/computador-index.js"></script>
}
