<input type="hidden" id="cliente-id" value="@ViewBag.Cliente.Id" />

<div class="row">

    <div class="col-6">

        <form action="/cliente/cadastro" method="post">
            <div class="form-group">
                <label for="cliente-nome">Nome</label>
                <input type="text" id="cliente-nome" name="nome" class="form-control" value="@ViewBag.Cliente.Nome" />
            </div>
            <div class="form-group">
                <label for="cliente-cpf">CPF</label>
                <input type="text" id="cliente-cpf" name="cpf" class="form-control" value="@ViewBag.Cliente.CPF" />
            </div>

            <button type="submit" class="btn btn-success float-right">Salvar</button>
        </form>

    </div>

    <div class="col-6">
        <div class="row">

            <div class="col-12">
                <button class="btn btn-primary float-right mb-3" data-target="#modal-contato" data-toggle="modal">Novo Contato</button>
            </div>
        </div>
        <div class="row">

            <div class="col-12">
                <table class="table table-bordered table-striped table-hover" id="tabela-contatos">
                    <thead>
                        <tr>
                            <th>Código</th>
                            <th>Nome</th>
                            <th>CPF</th>
                            <th>Ação</th>
                        </tr>
                    </thead>
                </table>
            </div>
        </div>
    </div>
</div>
<partial name="CadastroModal.cshtml" />


@section Scripts{
    <script src="~/js/cliente/cliente-editar.js"></script>
    <script src="~/js/cliente/cliente-contato.js"></script>
}
